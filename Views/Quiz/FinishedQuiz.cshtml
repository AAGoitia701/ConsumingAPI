@model CorrectIncorrectViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Results</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="card shadow-lg p-4 text-center" style="width: 100%; max-width: 500px;">
            <h2 class="card-title">Quiz Results</h2>

            <!-- Number of good answers -->
            <p class="fs-4 text-success">
                You had <strong>@Model.CorrectAnswers</strong> correct answers
            </p>

            <!-- Incorrects -->
            <div class="text-start mt-4">
                <h5 class="text-danger">Incorrect Answers:</h5>
                @if (Model.IncorrectAnswers.Count()>0)
                {
                    <ul class="list-group">
                        @for(int i =0; i< Model.QuestionList.Count(); i++)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <!-- question column -->
                                    <div class="col-md-6 fw-bold text-start">
                                        @Model.QuestionList[i]
                                    </div>
                                    <!-- answer column -->
                                    <div class="col-md-6 text-danger text-start">
                                        @Model.IncorrectAnswers[i]
                                    </div>
                                </div>
                            </li>
                        }

                    </ul>
                }
                else
                {
                    <p class="text-muted">No incorrect answers!</p>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>

